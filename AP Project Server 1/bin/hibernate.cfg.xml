<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jhtdatabase</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.pool_size">4</property>
        <property name="hibernate.current_session_context_class">thread</property>
        


        <mapping class="generalinfo.Staff"/>
        <mapping class="generalinfo.Customer"/>
        <mapping class="generalinfo.RouteRates"/>
        <mapping class="generalinfo.Date"/>
        <mapping class="generalinfo.PayRoll"/>
        <mapping class="generalinfo.TripOrder"/>
        <mapping class="generalinfo.Contractor"/>
        <mapping class="generalinfo.Address"/>
        <mapping class="generalinfo.Logins"/>
    </session-factory>
</hibernate-configuration>
